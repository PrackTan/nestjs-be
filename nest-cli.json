{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/mail/templates/**/*",
        "outDir": "dist/mail/templates"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true,
    "webpack": true
  },
  "generateOptions": {
    "spec": false
  }
}
